root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.yml]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 2

[*.xml.dist]
indent_style = space
indent_size = 2